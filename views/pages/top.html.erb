<html>
  <head>
    <meta charset="utf-8">
    <title>toq</title>
    <style>

      .left{
        width:80%;
        height:500px;
        float:left;
      }

      .right{
        width:20%;
        right:140px;
        height:500px;
        float:right;
        position:fixed;
      }

      .container, .nav{
        width:100%;
        margin:0auto;
      }

      .nav{
        width:100%;
        margin:0;
        padding:0;
      }

      .nav__list{
        margin:0;
        padding:0;
      }

      .nav__list:after{
        display:block;
        visibility:hidden;
        clear:both;
        height:0;
        content:",";
        font-size:0;
      }

      .nav__list li{
        float:left;
        width:20%;
        height:48px;
        box-sizing:border-box;
        list-style-type:none;
        background:#ffffff;
        border-left:1px solid #e9e9e7;
      }

      .nav__list li:last-child{
        border-right: 1px soled #e9e9e7
      }

      .nav__link{
        display:block;
        height:14px;
        margin:0;
        padding:17px 0;
        color: #333333;
        font-size:0.8em;
        text-align:center;
        line-height:1.0;
        text-decoration:none;
        transition: all .3s;
        -webkit-transition: all .3s;
      }

      .nav__link--home{
        border-bottom: 4px solid #d92567;
      }

      .nav__link--home:hover{
        background: #d92567;
      }

      .nav__link--login{
        border-bottom: 4px solid #5c0973;
      }

      .nav__link--login:hover{
        background: #5c0973;
      }

      .nav__link--register{
        border-bottom: 4px solid #65bfb6;
      }

      .nav__link--register:hover{
        background: #65bfb6;
      }

      .nav__link--submit{
        border-bottom: 4px solid #f2bb16;
      }

      .nav__link--submit:hover{
        background: #f2bb16;
      }

      .nav__link--contactus{
        border-bottom: 4px solid #f22f2d;
      }

      .nav__link--contactus:hover{
        background: #f22f;2d
      }









    </style>
  </head>
  <body>

    <div id="container">
      <nav od="fixed-nav" role="navigation" classs="nav">
        <ul class="nav__list">
          <li><a href="/" class="nav__link nav__link--home">HOME</a></li>
          <li><a href="/login" class="nav__link nav__link--login">LOGIN</a></li>
          <li><a href="/register" class="nav__link nav__link--register">REGISTER</a></li>
          <li><a href="/submit" class="nav__link nav__link--submit">SUBMIT</a></li>
          <li><a href="/" class="nav__link nav__link--contactus">CONTACTUS</a></li>
        </ul>
      </nav><br>
      <div id="main2" class="main2">
        <div class="main2__content">

          <section id="main">
            <div class="right">

              <% if session[:id]%>
                <div>
                  <%= @users.find(session[:id]).username %>
                  <%= link_to"マイページ","/mypage" %>
                  <%= link_to"ログアウト","/logout" %>
                </div>
              <%else%>
                <div class="square_btn"><%= link_to"ログイン画面","/login" %></div>&nbsp
                <div class="square_btn"><%= link_to"ユーザー登録","/register" %></div>&nbsp
              <%end%><br><br>

              <h2>目次！</h2><br>
              数学<br>
              英語<br>
              物理<br>
              化学<br>
            </div>
            <div class="left">
              <h2>あはははは</h2><br>
              <iframe width="100px" height="250px" src="http://kabegami.org/wp-content/uploads/2013/03/t3lhox.jpg">
              </iframe>
            </div>
          </section>

        </div>
      </div>
    </div>


  </body>
</html>


