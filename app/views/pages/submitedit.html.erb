<%=form_tag("/submitedit",method: :post) do %>

    <%= label_tag :タイトル %><br>

    <%= label_tag :I %><%= label_tag :D %><br>

    <%= text_field_tag :id,params[:format], :readonly => true %> <br>

    <%= label_tag :タイトル %><br>

    <%= text_field_tag :title,Submission.find(params[:format]).title, :size => "30" %><br>

    <%= label_tag :投稿内容 %><br>

    <%= text_area_tag :content,Submission.find(params[:format]).content, :size => "40*60" %><br>

    <%= submit_tag :確認,data: {confirm: "変更を保存しますか？"} %>

<% end %>